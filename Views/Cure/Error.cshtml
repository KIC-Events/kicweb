@{
    ViewBag.Title = "Error";
}

<div class="container" style="max-width: 600px; margin: 4rem auto;">
    <section class="page-section" aria-labelledby="error-title">
        <div class="info-banner" style="margin-bottom: 2rem;">
            <h1 id="error-title" class="h2" style="color: var(--color-red); margin-bottom: 1rem;">
                Something Went Wrong
            </h1>
            <p>
                An unexpected error has occurred. Please try again later or contact support if the problem persists.
            </p>
        </div>
        <div style="text-align: center;">
            <a href="/" class="button" style="margin-right: 1rem;">Return Home</a>
            <a href="mailto:admin@kicevents.com" class="button button--secondary">Contact Support</a>
        </div>
    </section>
</div>